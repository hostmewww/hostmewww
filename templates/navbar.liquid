<nav class="navbar-collapse">
    <ul class="nav navbar-nav navbar-right">
        {% for node in root.nodes %}
        {% if node.nodes.size > 0 %}
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown">
                    {{node.label}}
                    <span class="caret"></span>
                </a>
                {% include 'navbar-menu' with node %}
            </li>
        {% endif %}
        {% unless node.nodes.size > 0 %}
            <li>
                <a class="dropdown-toggle" data-toggle="dropdown" href="{{node.url}}">
                    {{node.label}}
                </a>
            </li>
        {% endunless %}
        {% endfor %}
    </ul>
</nav>